# Database
POSTGRES_DB=postgres                # dev may override with rfc_garments_001
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGEME          # each env sets its own secure password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Django
DJANGO_SECRET_KEY=CHANGEME          # unique per env
DJANGO_DEBUG=True                   # True in dev, False in VPS/prod
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1   # override on VPS/prod

# Superuser (optional seed, not for prod usually)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=CHANGEME

# Domain & SSL
DOMAIN=dev.rfclabs.com              # override in VPS/prod
EMAIL=admin@example.com             # ACME/Letâ€™s Encrypt contact email

# CSRF trusted origins (comma-separated)
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# Docker project name
COMPOSE_PROJECT_NAME=rfclabs
