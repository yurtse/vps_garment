{$DOMAIN} {
  # redirect root to /home
  @root {
    path /
    method GET
  }
  redir @root /home/ 302

  # serve static files from Django's STATIC_ROOT
  handle_path /static/* {
    root * /code/config/staticfiles
    file_server
  }

  # serve media files if needed
  handle_path /media/* {
    root * /code/media
    file_server
  }

  # proxy everything else to Django
  handle {
    reverse_proxy web:8000
  }

  log {
    output stdout
    format console
  }

  encode zstd gzip
}
